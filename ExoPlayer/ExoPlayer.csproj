<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0-android33.0</TargetFramework>
    <AssemblyName>ExoPlayer</AssemblyName>
    <RootNamespace>ExoPlayer</RootNamespace>
    <Description>Xamarin bindings for ExoPlayer</Description>
    <PackageId>Xam.Plugins.Android.ExoPlayer</PackageId>
    <EnableDefaultItems>false</EnableDefaultItems>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Additions\*;Jars\*;Transforms\*;JavaDocs\**" />
    <LibraryProjectZip Include="Jars\*.aar" />
    <TransformFile Include="Transforms\*.xml" />
    <Compile Include="Additions\*.cs" />
    <None Include="..\readme.txt" pack="true" PackagePath="." />
    <JavaSourceJar Include="JavaDocs\*.jar" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\ExoPlayer.Common\ExoPlayer.Common.csproj" />
    <ProjectReference Include="..\ExoPlayer.Core\ExoPlayer.Core.csproj" />
    <ProjectReference Include="..\ExoPlayer.Dash\ExoPlayer.Dash.csproj" />
    <ProjectReference Include="..\ExoPlayer.Database\ExoPlayer.Database.csproj" />
    <ProjectReference Include="..\ExoPlayer.DataSource\ExoPlayer.DataSource.csproj" />
    <ProjectReference Include="..\ExoPlayer.Decoder\ExoPlayer.Decoder.csproj" />
    <ProjectReference Include="..\ExoPlayer.Extractor\ExoPlayer.Extractor.csproj" />
    <ProjectReference Include="..\ExoPlayer.Hls\ExoPlayer.Hls.csproj" />
    <ProjectReference Include="..\ExoPlayer.Rtsp\ExoPlayer.Rtsp.csproj" />
    <ProjectReference Include="..\ExoPlayer.SmoothStreaming\ExoPlayer.SmoothStreaming.csproj" />
    <ProjectReference Include="..\ExoPlayer.Transformer\ExoPlayer.Transformer.csproj" />
    <ProjectReference Include="..\ExoPlayer.UI\ExoPlayer.UI.csproj" />
  </ItemGroup>
</Project>